<h1>Edit Movie</h1>
<%= form_for @movie, :html => { :multipart => true } do |f| %>
  <%= f.label :title %>:<br />
  <%= f.text_field :title, class: "form-control" %><br />
  <%= f.label :description %>:<br />
  <%= f.text_area :description, class: "form-control" %><br />
  <%= f.select :genre_id, @genres %><br />
  <%= f.file_field :movie_img %><br />
  <%= f.submit %>
<% end %>