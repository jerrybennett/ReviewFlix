<div class="star-rating" data-score="<%= review.rating %>"></div>

<p><%= review.comment %></p>
<hr>

<% if logged_in? && review.user_id == current_user.id %>
    <%= link_to "Edit", edit_movie_review_path(review.movie, review), class: "btn btn-primary" %>
    <%= link_to "Delete", movie_review_path(review.movie, review), method: :delete, data: {confirm: "You want to delete your review?"}, class: "btn btn-danger" %>
<% end %>